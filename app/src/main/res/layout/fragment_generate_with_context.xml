<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelPrevContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="前コンテキスト（これまでの文脈）"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/prevContextEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例）今日は疲れたので"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:padding="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/labelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="今回変換したい読み（かな・カタカナ）"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例）らーめん"
            android:inputType="text"
            android:padding="8dp" />

        <Button
            android:id="@+id/convertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="generateWithContext を実行" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="待機中"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/outputTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="ここに結果が表示されます"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
